<!DOCTYPE html>

<html>
    <head>
        <title>
            Dashboard
        </title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="dashstyle.css">
    </head>

    <body>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1> Dashboard </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            Stats
                        </div>

                        <div class="card-body">
                            <table class="table table-dark">
                                <tr>
                                    <td> Total Stock </td>
                                    <td> Total Brand </td>
                                </tr>

                                <tr>
                                    {{#n1}} <td> {{sum}} </td> {{/n1}}
                                    {{#n2}} <td> {{count}} </td> {{/n2}}
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            Stats
                        </div>

                        <div class="card-body">
                            <a href="/add" class="btn btn-primary"> Add Medecine </a>
                            <a href="/meds" class="btn btn-primary"> Edit Medecine </a>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>

        <!-- 
        {{#n1}} <h1> {{sum}} </h1> {{/n1}}
        {{#n2}} <h1> {{count}} </h1> {{/n2}}
        -->  
    </body>
</html>